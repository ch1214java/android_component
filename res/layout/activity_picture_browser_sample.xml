<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout
        android:id="@+id/layout_browser_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/btn_guimipicture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="btnBrowserSinglePic"
                android:text="浏览单个图(cache)" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="btnBrowserURLPic"
                android:text="预览图片(URL)" />
            
            <Button android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="btnBrowserDrawablePic"
                android:text="预览图片(默认)"/>
        </LinearLayout>

        <com.vanchu.libs.common.imgZoom.GestureImageView
            android:id="@+id/img_browser"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:contentDescription="@string/app_name" />
    </LinearLayout>
    
