<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Test TCP"
            android:id="@+id/button_test_tcp"
            android:layout_marginTop="42dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Test LRU"
            android:id="@+id/button_test_lru"
            android:layout_marginTop="31dp"
            android:layout_below="@+id/button_test_tcp"
            android:layout_alignRight="@+id/button_test_tcp"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Test Sound"
            android:id="@+id/button_test_sound"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get Dir"
            android:id="@+id/button_get_dir"
            android:layout_marginTop="16dp"
            android:layout_below="@+id/button_test_sound"
            android:layout_alignRight="@+id/button_test_lru"/>
</RelativeLayout>
